{% extends "PackagistWebBundle::layout.html.twig" %}

{% import "PackagistWebBundle::macros.html.twig" as macros %}

{% block content %}
    <div class="box clearfix">
        {% block content_title %}<h1>Browse Plugins</h1>{% endblock %}
        {% block lists %}
            <div class="package">By tags:
                <p class="tags">
                    <a href="{{ url('allPackages', {tag:'authentication'}) }}">authentication</a>
                    <a href="{{ url('allPackages', {tag:'mail'}) }}">mail</a>
                    <a href="{{ url('allPackages', {tag:'addressbook'}) }}">addressbook</a>
                    <a href="{{ url('allPackages', {tag:'settings'}) }}">settings</a>
                    <a href="{{ url('allPackages', {tag:'security'}) }}">security</a>
                    <a href="{{ url('allPackages', {tag:'apps'}) }}">apps</a>
                </p>
            </div>
            <div class="packages-short">
                <h2>New Releases <a href="{{ url('feed_releases', {_format: 'rss'}) }}">RSS</a></h2>
                <ul>
                    {% for version in newlyReleased %}
                        <li><a href="{{ path('view_package', {name: version.name}) }}">{{ version.name }} {{ version.version }}</a> {{ version.description|truncate(40) }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="packages-short">
                <h2>Popular Plugins</h2>
                <ul>
                    {% for pkg in popular %}
                        <li><a href="{{ path('view_package', {name: pkg.name}) }}">{{ pkg.name }}</a> {{ pkg.description|truncate(40) }}</li>
                    {% endfor %}
                    <li><a href="{{ path('browse_popular') }}">See more...</a></li>
                </ul>
            </div>
        {% endblock %}
    </div>
{% endblock %}